@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post" asp-action="UpdateAbout">
    
    <input type="hidden" asp-for="AboutID" value="@Model.AboutID" />
    <input type="hidden" asp-for="Content" value="@Model.AboutID" />
    <input type="hidden" asp-for="RoomCount" value="@Model.AboutID" />
    <input type="hidden" asp-for="StaffCount" value="@Model.AboutID" />
    <input type="hidden" asp-for="CustomerCount" value="@Model.AboutID" />
    <label>Başlık 1</label>
    <input type="text" asp-for="Title1" class="form-control" />
    <br />
    <label>Başlık 2</label>
    <input type="text" asp-for="Title2" class="form-control" />
    <br />
    <button type="submit" class="btn btn-success">Güncelle</button>
</form>
